<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th><h2>Article </h2></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  	<br>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article), class: 'article_title' %></td>
        <td>&nbsp &nbsp</td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<p><h3><%= link_to "New Article", new_article_path %><h3></p>